      let flag = periodValidator(period[0],period[1],"click");

      if(flag==true){
        $.ajax({
          url : "/getScheduleData",
          type : "POST",
          dataType : "json",
          data : {dateFrom : period[0], dateTo : period[1]},
          success : (data) => {
