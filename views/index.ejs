              });
            });


            clist.gs_name_gruop_data = gs_data;
            sortByWeightedMin(clist.gs_name_gruop_data);
            clist.other_name_gruop_data = other_data;
            sortByWeightedMin(clist.other_name_gruop_data);
            $('.shop_category').css('display','flex');
            $.hideLoading();
          },
          error : (e) => {
